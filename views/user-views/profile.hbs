<main>
<div class="row">
<h1 class="col">{{user.username}} Settings</h1>
  <div class="col">
    <img src="{{user.profileImage}}" alt="Profile Pic" id="profilePic" style="width:100px"><br>
</div>
<div class="col">

    <a href="/followers">Followers</a><br>
    <a href="/following">Following</a><br>
    <a href="/account">Edit Profile</a>
    <form action="/delete" method="POST">
      <button class="btn btn-danger" style="background-color:transparent; margin:0;padding:0;color:red;border:transparent">Delete Account</button>
    </form>
</div>
</div>

  <div class="body">
    <div>
  {{#each posts}}
    <div class="post">
      <div class="post-head">
        <div class="row space-between">
        <p class="col">{{this.date}}</p>
        </div>
      </div>
      <div class="post-content">
        <img src="{{this.image}}" alt="">
        <p>{{this.caption}}</p>
      </div>
      <div class="post-comments">
        {{#each this.comments}}
          <div>
            <div class="row">
              <img class="col" src="{{this.creator.profileImage}}" alt="">
              <p class="col">{{this.content}}</p>;
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  {{/each}}
    </div>
  </div>
</main>